{
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-shadow": "warn",
    "no-console": "off",
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "func-names": "off",
    "node/no-unpublished-require": "off",
    "no-restricted-syntax": "off",
    "no-underscore-dangle": "off"
  },
  "env": {
    "browser": true,
    "node": true
  }
}
